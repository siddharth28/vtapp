    <li><%= link_to 'Track Reviewer', tracks_tracks_search_path(type: 'reviewer') %></li>
  <% end %>

  <% if current_user.track_runner? %>
    <li><%= link_to 'Track Assigned', tracks_tracks_search_path(type: 'runner') %></li>
  <% end %>
</ul>