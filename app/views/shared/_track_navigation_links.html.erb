  <% if current_user.account_owner? || current_user.account_admin? %>
    <li><%= link_to 'All Tracks', tracks_path %></li>
  <% end %>

  <% if current_user.track_owner? %>
    <li><%= link_to 'Track Owned', tracks_tracks_search_path(type: 'owner') %></li>
  <% end %>

