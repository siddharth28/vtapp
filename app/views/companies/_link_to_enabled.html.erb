<% if company.enabled %>
  <!-- extract a helper as dom_id for company_#{ company.id } -->
  <%= link_to 'Disable', disable_company_path(company), remote: true, id: "company_#{ company.id }", data: { confirm: "Are you sure you want to Disable #{ company.name }?" }, method: :patch %>
