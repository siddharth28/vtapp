<div class="container">
  <div class="row">
    <h3 class="m-left-8x">Companies</h3>
    <div class="column m-left-5x">

      <table class="sortable_table table table-bordered table-striped ">
        <thead>
          <tr>
            <%= content_tag :th, sort_link(@search, :name, 'Name', default_order: :desc) %>
            <%= content_tag :th, sort_link(@search, :users_email, 'Email') %>
            <th class="disabled">
              Actions
            </th>
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <%= render company %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @companies %>
    </div>
  </div>
</div>
