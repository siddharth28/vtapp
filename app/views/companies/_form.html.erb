<div class="form-group">
  <%= form_for(@company) do |company| %>
    <% if @company.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:
        </h2>

        <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= company.label :company_name %><br>
      <%= company.text_field :name %>
    </div>
    <%= company.fields_for(:users) do |user| %>
      <div class="field">
        <%= user.label :owner_name %><br>
        <%= user.text_field :name %>
      </div>
      <div class="field">
        <%= user.label :email %><br>
        <%= user.email_field :email %>
      </div>
      <%= user.fields_for(:roles) do |role| %>
        <div class="field">
          <%= role.hidden_field 'name', value: 'account_owner' %>
        </div>
      <% end %>
    <% end %>
    <div class="actions">
      <%= company.submit %>
    </div>
  <% end %>
</div>
