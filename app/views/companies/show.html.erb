<div class="col-md-10 m-top m-left-x">
  <h3 class='m-left-475x'>Company</h3>

  <div class='col-md-10'>
    <label class='col-md-6 m-left-35x'><span>Company Name:</span><span class='form-control', readonly><%= @company.name %></span></label>
  </div>

  <div class='col-md-10'>
    <label class='col-md-6 m-left-35x'><span>Company Owner:</span><span class='form-control', readonly><%= @company.owner.name %></span></label>
  </div>

  <div class='col-md-10'>
    <label class='col-md-6 m-left-35x'><span>Email-ID:</span><span class='form-control', readonly><%= @company.owner.email %></span></label>
  </div>

  <div class='col-md-10'>
    <label class='col-md-6 m-left-35x'><span>Company Status:</span><span class='form-control', readonly><%= @company.status %></span></label>
  </div>

  <p>
    <%= link_to 'Back', companies_path, class: 'btn btn-default btn-lg m-left-475x m-top' %>
  </p>
</div>