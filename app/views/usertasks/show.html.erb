<div class='task_description'>
  <%= link_to 'Back', track_tasks_path(current_track), class: 'btn btn-default pull-right m-right-2x' %>
  <h1 class='m-left-375x'>Task</h1>
  <div class='m-left-375x form-horizontal form-well col-sm-6' >
    <%= render 'usertask' %>

    <% if current_task.need_review? %>
      <% if @usertask.user == current_user && (@usertask.in_progress? || @usertask.submitted?) %>
        <%= render 'url_form' %>
      <% end %>
      <% unless @usertask.urls.persisted.blank? %>
        <div class="form-group">
          <label class='col-sm-3'><strong>Solutions Submitted:</strong></label>
          <div class="col-sm-8 readonly">
            <% @usertask.urls.persisted.order(updated_at: :desc).each do |url| %>
              <%= link_to url.name, url.name %><br>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

    <%= render 'comment_form' %>
    <%= link_to 'Submit task', submit_task_usertask_path, class: 'btn btn-default pull-right m-right-2x' %>
    <%= render 'comments' %>
  </div>
</div>