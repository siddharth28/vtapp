<%= form_for(@usertask, url: url_for(controller: :usertasks, action: 'review_exercise', id: @usertask)) do |usertask| %>

  <div class="form-group">
    <%= usertask.label :comment, class: 'col-sm-3' %>
    <div class="col-sm-8">
      <%= usertask.text_area :comment, class: 'form-control', rows: 3, placeholder: "Click to add in a comment.." %>
      <%= errors_for_field(@usertask, :comments) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3"></div>
    <div class="col-sm-8">
      <label class="col-sm-4">
        Accept
        <%= usertask.radio_button :task_status, 'accept' %>
      </label>
      <label class="col-sm-4">
        Reject
        <%= usertask.radio_button :task_status, 'reject', checked: true %>
      </label>
    </div>
  </div>
  <div class="col-sm-3"></div>
  <%= usertask.submit 'Submit', class: 'btn btn-default' %>
<% end %>