<div class='task_description'>
  <%= link_to 'Back', to_review_track_tasks_path(current_track), class: 'btn btn-default pull-right m-right-2x' %>
  <h1 class='m-left-375x'>Task</h1>
  <div class='m-left-375x form-horizontal form-well col-sm-6' >

    <%= render 'usertask' %>

    <div class="form-group">
      <label class='col-sm-3'><strong>Solutions Submitted:</strong></label>
      <div class="col-sm-8 readonly">
        <% @usertask.urls.each do |url| %>
          <%= link_to url.name %><br>
        <% end %>
      </div>
    </div>

    <%= render 'review_form' %>
    <%= render 'comments' %>
  </div>
</div>