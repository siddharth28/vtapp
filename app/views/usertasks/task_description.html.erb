<div>
  <h1 class='m-left-550x'>Task</h1>
  <div class='m-left-375x form-horizontal form-well col-sm-6' >
    <div class="form-group">
      <label class='col-sm-3'><strong>Task Title:</strong></label>
      <div class="col-sm-8 readonly">
        <%= @usertask.task.title %>
      </div>
    </div>

    <div class="form-group">
      <label class='col-sm-3'><strong>Task Description:</strong></label>
      <div class="col-sm-8 readonly">
        <%= @usertask.task.description %>
      </div>
    </div>

    <% if @usertask.task.specific %>
      <div class="form-group">
        <label class='col-sm-3'><strong>Solutions Submitted:</strong></label>
        <div class="col-sm-8 readonly">
          <% @usertask.urls.each do |url| %>
            <%= link_to url.name %><br>
          <% end %>
        </div>
      </div>
    <% end %>

    <%= render 'form' %>

    <% if @usertask.task.specific %>
      <div class="form-group m-top">
        <label class='col-sm-3'><strong>Comments:</strong></label>
        <div class="col-sm-8">
          <% @usertask.comments.each do |comment| %>
            <p class="bg-info"><%= "#{ comment.data } (#{ comment.created_at.strftime '%H:%M %d/%m' })" %></p><br>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>