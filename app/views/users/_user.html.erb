<td><%= link_to user.name, user %></td>

<td><%= link_to user.email, user %></td>

<td><%= user.department %></td>

<td>
  <% if user.account_owner? %>
    <%= 'Account Owner' %>
  <% elsif user.account_admin? %>
    <%= 'Admin' %>
  <% else %>
    <%= '-' %>
  <% end %>
</td>

<td>
  <%= link_to 'Show', user , class: 'p-right p-left' %>
  <% if (current_user.account_admin? && !user.account_admin? && !user.account_owner?) || (current_user.account_owner?) %>
    <%= link_to 'Edit', edit_user_path(user), class: 'p-right p-left' %>
  <%end%>
  <%= link_to 'Progress', class: 'p-right p-left' %>
</td>
