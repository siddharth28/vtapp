<div class="container">
  <div class="row">
    <div>
      <h3 class='m-left-75x'>Mentees</h3>
    </div>
    <div class="column m-left-0x">

      <table class="sortable_table table table-bordered table-striped m-left">
        <thead>
          <tr>
            <%= content_tag :th, sort_link(@search, :name, 'Name',  default_order: { name: 'asc' }) %>
            <%= content_tag :th, sort_link(@search, :email, 'Email') %>
            <%= content_tag :th,sort_link(@search, :department) %>
            <th>
              Roles
            </th>
            <th>
              Actions
            </th>
          </tr>
        </thead>
        <tbody>
          <% @mentees.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @mentees %>
    </div>
  </div>
</div>
