<div class="span8 offset1">
  <h2 class='m-left m-top'>
    Show <%= @track.name.to_s.humanize %>
  </h2>

  <dl class="dl-horizontal">
    <dt><strong>Track:</strong></dt>
    <dd><%= @track.name %></dd>

    <dt><strong>Description:</strong></dt>
    <dd><%= @track.description %></dd>

    <dt><strong>Instructions:</strong></dt>
    <dd><%= @track.instructions %></dd>

    <dt><strong>References:</strong></dt>
    <dd><%= @track.references %></dd>

    <dt><strong>Track Owner:</strong></dt>
    <dd><%= @track.owner.name %></dd>
  </dl>
  <%= link_to 'Back', tracks_path(company: @track.company_id) %>
</div>