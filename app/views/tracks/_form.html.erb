<div class="form-group col-md-8">
  <%= form_for(@track) do |track| %>

    <%= render partial: 'errors', locals: { object_with_errors: @track } if @track.errors.any? %>

    <div class="field">
      <%= track.label :name %>
      <%= track.text_field :name %>
    </div>

    <div class="field">
      <%= track.label :description %>
      <%= track.cktext_area :description %>
    </div>

    <div class="field">
      <%= track.label :instructions %>
      <%= track.cktext_area :instructions %>
    </div>

    <div class="field">
      <%= track.label :references %>
      <%= track.cktext_area :references %>
    </div>

    <div class="field">
      <%= track.label :track_owner %>
      <%= track.autocomplete_field :owner_name, autocomplete_user_name_tracks_path %>
      <%= track.hidden_field :owner_email, value: :owner_email, class:"owner_email" %>
    </div>

    <div class="field">
      <%= track.label :user_status %>
      <%= track.check_box :enabled %>
    </div>

    <div class="actions">
      <%= track.submit %>
    </div>
  <% end %>
</div>