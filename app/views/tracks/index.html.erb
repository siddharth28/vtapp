<div class="container">
  <div class="row">
    <h3>Track</h3>
    <div class="column">

      <table class="sortable_table table table-bordered table-striped ">
        <thead>
          <tr>
            <%= content_tag :th, sort_link(@search, :name, 'Name', default_order: :desc) %>
            <%= content_tag :th, sort_link(@search, :owner_name, 'Owner Name') %>
            <th class="disabled">
              Actions
            </th>
          </tr>
        </thead>
        <tbody>
          <% @tracks.each do |track| %>
            <tr>
              <%= render track %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @tracks %>
    </div>
  </div>
</div>