<%= render partial: 'side_navigation' %>
<div class = 'col-md-10'>
  <div class = 'form-group col-md-10 m-top'>
    <div >
      <%= form_for(@track, url: assign_reviewer_track_path, remote: true, class: 'form-horizontal') do |track| %>
        <div class="field m-top col-md-6">
          <p class='m-left-45x col-md-6'><%= track.label :track_reviewer %></p>
          <%= track.autocomplete_field :reviewer_name, autocomplete_user_name_tracks_path, id_element: '#track_reviewer_id', value: '', class: 'form-control m-left-3x' %>
          <%= track.hidden_field :reviewer_id %>
          <%= errors_for_field(@track, :reviewer_name) %>
          <%= track.submit "Add", class: "m-left-5x reviewer btn btn-primary add_reviewer m-top" %>
        </div>
        <br>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="column">
      <table class="sortable_table table table-bordered table-striped reviewer_table ">
        <thead>
          <tr>
            <th>Reviewer</th>
            <th>Reviewer Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @track.reviewers.each do |reviewer| %>
            <tr>
              <td><%= link_to reviewer.name, reviewer %></td>
              <td><%= link_to reviewer.email, reviewer %></td>
              <td><%= link_to 'Remove', remove_reviewer_track_path(@track, reviewer), remote: true, data: { confirm: "Are you sure?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>